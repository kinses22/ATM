import java.io.*;
import java.util.Scanner;

public class ATM {

		public static boolean checkPassWord(int p, int x){
		if(p == x){
		 return false;
		 }
		else{
			System.out.println("Please Try Again");
			return true;
		}
	} 
	
	
	public static void ATMOptions(){
		 System.out.printf(" 1 - Account Balance  %n"
 				 + " 2 - WithDrawl %n" 
